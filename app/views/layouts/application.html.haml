!!!
%html
  %head
    %title arkiver's archives
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .left
      .hidden
        '.'
    .center
      .blog_header
        %h1#blog_header
          = link_to "arkiver's archives", posts_path
      = yield
    .right
      .user_nav
        - if user_signed_in?
          = link_to 'Sign out', destroy_user_session_path, :method => :delete
        - else
          = link_to 'Sign in', user_session_path
