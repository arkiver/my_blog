= stylesheet_link_tag :normalize
= stylesheet_link_tag :posts

= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
          .actions
  .post_form
    .field.title
      = f.label :title
      %br
      = f.text_field :title
    .field#content_form
      = f.label :content
      %br
      = f.text_area :content
  = f.submit 'Save'

